

<%content_for :head do%>
	<script language="javascript" >

	function enviardados(){
	if(document.form.sitecontact_name.value=="" || document.form.nome.value.length < 8)
	{
	alert( "Preencha campo NOME corretamente!" );
	document.form.nome.focus();
	return false;
	}

	if( document.form.sitecontact_email.value=="" || document.form.email.value.indexOf('@')==-1 || document.form.email.value.indexOf('.')==-1 )
	{
	alert( "Preencha campo E-MAIL corretamente!" );
	document.form.email.focus();
	return false;
	}

	if (document.form.sitecontact_message.value=="")
	{
	alert( "Preencha o campo MENSAGEM!" );
	document.form.mensage.focus();
	return false;
	}

	document.form.submit();
	}
	</script>
<%end%>

